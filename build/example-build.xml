<?xml version="1.0" encoding="UTF-8"?>
	<project name="VideoEditor" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
				<file name="${basedir}"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<!-- Copy some resources from project to build -->
		<mkdir dir="externalLibs" />
		<copydir src="C:\workspace oxygen\VideoEditor\libs\"
		           dest="externalLibs/"
		/>
			
		<mkdir dir="externaldlls" />
		<copydir src="C:\workspace oxygen\VideoEditor\dlls\"
		           dest="externaldlls/"
		/>

		<mkdir dir="dist/resources" />
		<copydir src="C:\workspace oxygen\VideoEditor\resources\"
		           dest="dist/resources/"
		/>

		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="C:\workspace oxygen\VideoEditor">
				<include name="src/**" />
			</fileset>
		</copy>
		
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/dlls" />
		<mkdir dir="build/classes" />
		<mkdir dir="build/dist" />
		
		<!-- Copy project resources -->
		<copy todir="build/dist">
			<fileset dir="externalLibs">
				<include name="opencv-330.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="opencv-330.jar"/>
			</fileset>
		</copy>
		
		<!-- Copy project-dlls references -->
		<copy todir="build/dlls">
			<fileset dir="externaldlls">
				<include name="openh264-1.6.0-win64msvc.dll"/>
				<include name="opencv_ffmpeg330_64.dll"/>
				<include name="opencv_java330.dll"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1252">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
				<fileset dir="build/dlls">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
		<mkdir dir="dist/dlls" />
		
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
		<copy todir="dist/dlls">
			<fileset dir="externaldlls">
				<include name="*" />
			</fileset>
		</copy>
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="VideoEditor.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
			<fx:fileset dir="dist" includes="dlls/*"/>
			<fx:fileset dir="dist" includes="resources/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="VideoEditor"
			mainClass="application.Main"
			version="1.0"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/VideoEditor.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Wadim Halle"/>
				<attribute name="Implementation-Title" value="VideoEditor"/>
				<attribute name="Implementation-Version" value="1.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="VideoEditor" nativeBundles="exe"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="VideoEditor" vendor="Wadim Halle"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
</project>
